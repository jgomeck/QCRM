@page "/facturasl"
@attribute [Authorize]

<PageTitle>Facturasl</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Facturasl" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@facturasl" RowUpdate="@GridRowUpdate" RowCreate="@GridRowCreate" TItem="QCRM.Models.DB_157005_crm7des.Facturasl">
            <Columns>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="ID_LINEA" Title="I D L I N E A">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="LINEA" Title="L I N E A">
                  <EditTemplate Context="facturasl">
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@facturasl.LINEA" Name="LINEA" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="PROYECTO" Title="P R O Y E C T O">
                  <EditTemplate Context="facturasl">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@facturasl.PROYECTO" Name="PROYECTO" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="MONEDA" Title="M O N E D A">
                  <EditTemplate Context="facturasl">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@facturasl.MONEDA" Name="MONEDA" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="IMPORTE" Title="I M P O R T E">
                  <EditTemplate Context="facturasl">
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@facturasl.IMPORTE" Name="IMPORTE" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="CONCEPTO" Title="C O N C E P T O">
                  <EditTemplate Context="facturasl">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@facturasl.CONCEPTO" Name="CONCEPTO" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Property="Facturas.ID_FACTURA" Title="Facturas">
                  <EditTemplate Context="facturasl">
                        <RadzenDropDown Data="@facturasForIDFACTURA" TextProperty="ID_FACTURA" ValueProperty="ID_FACTURA"
                            Placeholder="Choose Facturas" style="display: block; width: 100%" @bind-Value="@facturasl.ID_FACTURA" Name="ID_FACTURA" AllowClear=true
                           />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Facturasl" Filterable="false" Sortable="false" Width="156px" TextAlign="TextAlign.Center">
                    <EditTemplate Context="facturasl">
                        <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => SaveButtonClick(args, facturasl)) @onclick:stopPropagation="true" />
                        <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            Click=@(args => CancelButtonClick(args, facturasl)) @onclick:stopPropagation="true" />
                    </EditTemplate>
                    <Template Context="facturasl">

                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => EditButtonClick(args, facturasl)) @onclick:stopPropagation="true" />

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, facturasl)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>

                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@contactos.NACIMIENTO" Name="NACIMIENTO" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="T E L E F O N O" Component="TELEFONO" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">

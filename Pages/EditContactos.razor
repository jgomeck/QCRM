                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Ciudades" Component="Ciudades" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@ciudadesForCIUDAD" TextProperty="CIUDAD" ValueProperty="CIUDAD" AllowClear=true
                         Placeholder="Choose Ciudades" style="display: block; width: 100%" @bind-Value="@contactos.CIUDAD" Name="CIUDAD"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Cuentas" Component="Cuentas" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@cuentasForIDCUENTA" TextProperty="CODE" ValueProperty="ID_CUENTA" AllowClear=true
                         Placeholder="Choose Cuentas" style="display: block; width: 100%" @bind-Value="@contactos.ID_CUENTA" Name="ID_CUENTA"
                           />
                </RadzenColumn>

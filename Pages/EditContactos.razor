                    <RadzenLabel Text="F A X" Component="FAX" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@contactos.FAX" Name="FAX" />

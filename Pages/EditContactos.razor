                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@contactos.NOMBRE" Name="NOMBRE" />
                    <RadzenRequiredValidator Component="NOMBRE" Text="NOMBRE is required" />
                </RadzenColumn>

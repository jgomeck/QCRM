                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@opolog.EVENTO" Name="EVENTO" />
                      <RadzenRequiredValidator Component="EVENTO" Text="EVENTO is required" style="position: absolute;" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Opolog" Property="NOMBRE" Title="N O M B R E">
                  <EditTemplate Context="opolog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@opolog.NOMBRE" Name="NOMBRE" />

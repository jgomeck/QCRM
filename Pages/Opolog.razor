                      <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@opolog.FECHA" Name="FECHA" />
                      <RadzenRequiredValidator Component="FECHA" Text="FECHA is required" style="position: absolute;" />

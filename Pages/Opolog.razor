                      <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@opolog.CIERRE" Name="CIERRE" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Opolog" Property="FORECAST" Title="F O R E C A S T">
                  <EditTemplate Context="opolog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@opolog.FORECAST" Name="FORECAST" />

                  <EditTemplate Context="opolog">
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@opolog.MONTOUSD" Name="MONTOUSD" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Opolog" Property="MONEDA" Title="M O N E D A">
                  <EditTemplate Context="opolog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@opolog.MONEDA" Name="MONEDA" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Opolog" Property="TC" Title="T C">
                  <EditTemplate Context="opolog">
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@opolog.TC" Name="TC" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Opolog" Property="MONTOMN" Title="M O N T O M N">
                  <EditTemplate Context="opolog">
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@opolog.MONTOMN" Name="MONTOMN" />

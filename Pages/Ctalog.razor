@page "/ctalog"
@attribute [Authorize]

<PageTitle>Ctalog</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Ctalog" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@ctalog" RowUpdate="@GridRowUpdate" RowCreate="@GridRowCreate" TItem="QCRM.Models.DB_157005_crm7des.Ctalog">
            <Columns>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="ID_CTALOG" Title="I D C T A L O G">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="FECHA" Title="F E C H A">
                  <EditTemplate Context="ctalog">
                      <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@ctalog.FECHA" Name="FECHA" />
                      <RadzenRequiredValidator Component="FECHA" Text="FECHA is required" style="position: absolute;" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="EVENTO" Title="E V E N T O">
                  <EditTemplate Context="ctalog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@ctalog.EVENTO" Name="EVENTO" />
                      <RadzenRequiredValidator Component="EVENTO" Text="EVENTO is required" style="position: absolute;" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="USUARIOCTA" Title="U S U A R I O C T A">
                  <EditTemplate Context="ctalog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@ctalog.USUARIOCTA" Name="USUARIOCTA" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="ESTADO" Title="E S T A D O">
                  <EditTemplate Context="ctalog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@ctalog.ESTADO" Name="ESTADO" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="NOTAS" Title="N O T A S">
                  <EditTemplate Context="ctalog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@ctalog.NOTAS" Name="NOTAS" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="NOTASCTA" Title="N O T A S C T A">
                  <EditTemplate Context="ctalog">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@ctalog.NOTASCTA" Name="NOTASCTA" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="LASTID" Title="L A S T I D">
                  <EditTemplate Context="ctalog">
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@ctalog.LASTID" Name="LASTID" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="Cuentas.CODE" Title="Cuentas">
                  <EditTemplate Context="ctalog">
                        <RadzenDropDown Data="@cuentasForIDCUENTA" TextProperty="CODE" ValueProperty="ID_CUENTA"
                            Placeholder="Choose Cuentas" style="display: block; width: 100%" @bind-Value="@ctalog.ID_CUENTA" Name="ID_CUENTA" AllowClear=true
                           />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Property="Usuarios.USUARIO" Title="Usuarios">
                  <EditTemplate Context="ctalog">
                        <RadzenDropDown Data="@usuariosForUSUARIO" TextProperty="USUARIO" ValueProperty="USUARIO"
                            Placeholder="Choose Usuarios" style="display: block; width: 100%" @bind-Value="@ctalog.USUARIO" Name="USUARIO" AllowClear=true
                           />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="QCRM.Models.DB_157005_crm7des.Ctalog" Filterable="false" Sortable="false" Width="156px" TextAlign="TextAlign.Center">
                    <EditTemplate Context="ctalog">
                        <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => SaveButtonClick(args, ctalog)) @onclick:stopPropagation="true" />
                        <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            Click=@(args => CancelButtonClick(args, ctalog)) @onclick:stopPropagation="true" />
                    </EditTemplate>
                    <Template Context="ctalog">

                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => EditButtonClick(args, ctalog)) @onclick:stopPropagation="true" />

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, ctalog)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
